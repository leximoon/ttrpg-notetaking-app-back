generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @map("_id") @default(cuid())
  email     String  @unique
  password  String
  name      String
}

model Document {
  id                String  @id @map("_id") @default(cuid())
  title             String
  userId            String
  worldId           String
  parentDocumentId  String?
  content           String?
  metadata          Json?
  bannerImage       String?
  icon              String?
  isArchived        Boolean
  isPublic          Boolean
} // TODO: Add indexes??

